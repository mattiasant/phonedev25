<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1a1a1a"
    android:padding="16dp">

    <!-- Header with back button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="24dp">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            app:tint="#ffffff"
            android:contentDescription="Back button" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Power-Ups"
            android:textSize="28sp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:gravity="center" />

        <View
            android:layout_width="40dp"
            android:layout_height="40dp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select one power-up to activate"
        android:textSize="16sp"
        android:textColor="#aaaaaa"
        android:gravity="center"
        android:layout_marginBottom="32dp" />

    <!-- Instant Triumph -->
    <LinearLayout
        android:id="@+id/instantTriumphContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#2a2a2a"
        android:padding="16dp"
        android:layout_marginBottom="12dp"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Instant Triumph"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/instantTriumphStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OFF"
                android:textSize="18sp"
                android:textColor="#666666"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Win the game instantly"
            android:textSize="14sp"
            android:textColor="#aaaaaa"
            android:layout_marginTop="8dp" />
    </LinearLayout>

    <!-- Genesis Forge -->
    <LinearLayout
        android:id="@+id/genesisForgeContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#2a2a2a"
        android:padding="16dp"
        android:layout_marginBottom="12dp"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Genesis Forge"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/genesisForgeStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OFF"
                android:textSize="18sp"
                android:textColor="#666666"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start with advanced resources"
            android:textSize="14sp"
            android:textColor="#aaaaaa"
            android:layout_marginTop="8dp" />
    </LinearLayout>

    <!-- Hyper-Thinker -->
    <LinearLayout
        android:id="@+id/hyperThinkerContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#2a2a2a"
        android:padding="16dp"
        android:layout_marginBottom="12dp"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Hyper-Thinker"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/hyperThinkerStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OFF"
                android:textSize="18sp"
                android:textColor="#666666"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enhanced thinking speed"
            android:textSize="14sp"
            android:textColor="#aaaaaa"
            android:layout_marginTop="8dp" />
    </LinearLayout>

    <!-- Clueless Chaos -->
    <LinearLayout
        android:id="@+id/cluelessChaosContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#2a2a2a"
        android:padding="16dp"
        android:layout_marginBottom="12dp"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Clueless Chaos"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cluelessChaosStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OFF"
                android:textSize="18sp"
                android:textColor="#666666"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Random unpredictable effects"
            android:textSize="14sp"
            android:textColor="#aaaaaa"
            android:layout_marginTop="8dp" />
    </LinearLayout>

</LinearLayout>